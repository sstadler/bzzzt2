<?xml version="1.0" encoding="utf-8"?>
<AbsoluteLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <Button
        android:id="@+id/btn_startRecord"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_x="34dp"
        android:layout_y="229dp"
        android:onClick="btn_startRecord"
        android:text="PUSH ME"
        android:textSize="55dp" />

    <ImageView
        android:id="@+id/imageView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_x="248dp"
        android:layout_y="388dp"
        android:src="@drawable/pictfemale" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_x="0dp"
        android:layout_y="388dp"
        android:src="@drawable/pictmale" />

    <TextView
        android:id="@+id/tv_tplabelindex"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_x="80dp"
        android:layout_y="413dp"
        android:text="Index: "
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textSize="40dp" />

    <TextView
        android:id="@+id/tv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_x="88dp"
        android:layout_y="38dp"
        android:text="Training"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textSize="40dp" />

    <TextView
        android:id="@+id/tv_sampleindex"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_x="134dp"
        android:layout_y="111dp"
        android:text="0/0"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textSize="40sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tv_tpindex"
        android:layout_width="85dp"
        android:layout_height="wrap_content"
        android:layout_x="192dp"
        android:layout_y="412dp"
        android:text="000"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textSize="40dp" />

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_x="112dp"
        android:layout_y="195dp"
        android:text="NEW ROUND"
        android:textAppearance="?android:attr/textAppearanceMedium" />

</AbsoluteLayout>