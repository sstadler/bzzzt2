<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".Bzzzt02" >

    <Button
        android:id="@+id/btn_train"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="57dp"
        android:layout_marginTop="65dp"
        android:onClick="btn_go2Train"
        android:text="Train" />

    <Button
        android:id="@+id/btn_stats"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/btn_train"
        android:layout_below="@+id/btn_train"
        android:layout_marginTop="20dp"
        android:onClick="btn_go2Stats"
        android:text="Statistics" />

    <Button
        android:id="@+id/btn_settings"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/btn_stats"
        android:layout_centerVertical="true"
        
        android:layout_marginTop="20dp"
        android:onClick="btn_go2Settings"
        android:text="Settings" />

    <Button
        android:id="@+id/btn_maintenance"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/btn_settings"
        android:layout_below="@+id/btn_settings"
        
        android:layout_marginTop="20dp"
        android:onClick="btn_go2Maintenance"
        android:text="Maintenance" />

</RelativeLayout>